{% extends '@layout/adminlte.html.twig' %}

{% block title %}
    Excluir Campanha {{ parent() }}
{% endblock %}

{% block page_header %}
    Excluir Campanha {{ form.getObject().name }}
{% endblock %}

{% block content %}

    {% include '@app/campaign/_form-elements.html.twig' %}

    {% set submit = form.get('submit') %}
    {% do submit.setAttribute('class','btn btn-danger').setLabel('Conformar Exclus√£o') %}

    {% do form.setAttribute('action',url('campaign.delete', {id: form.getObject().id })) %}
    {% do form.prepare() %}

        <div class="box box-danger">

                <fieldset disabled>
                    <div class="box-body">

                        {% include '@app/campaign/_form-body.html.twig' %}

                    </div>
                </fieldset>

            {{ form().openTag(form) | raw}}

            {{ formHidden(form.get('_method')) }}

            <div class="box-footer">
                {{ formRow(submit) }}
            </div>

            {{ form().closeTag() | raw}}

        </div>

{% endblock %}

{% block javascript %}
    <script>
        tinymce.init({
            selector:'textarea',
            height: 400
        });
    </script>
{% endblock %}
