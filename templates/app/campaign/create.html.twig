{% extends '@layout/adminlte.html.twig' %}

{% block title %}
    Criar Campanha {{ parent() }}
{% endblock %}

{% block page_header %}
    Criar Campanha
{% endblock %}

{% block content %}

    {% include '@app/campaign/_form-elements.html.twig' %}

    {% set submit = form.get('submit') %}
    {% do submit.setAttribute('class','btn btn-primary').setLabel('Salvar') %}

    {% do form.setAttribute('action',url('campaign.create')) %}
    {% do form.prepare() %}
        <div class="box">

                {{ form().openTag(form) | raw}}

                    <div class="box-body">
                        {% include '@app/campaign/_form-body.html.twig' %}
                    </div>

                    <div class="box-footer">
                        {{ formRow(submit) }}
                    </div>

                {{ form().closeTag() | raw}}

        </div>

{% endblock %}

{% block javascript %}
<script>
    tinymce.init({
        selector:'textarea',
        height: 400
    });
</script>
{% endblock %}
