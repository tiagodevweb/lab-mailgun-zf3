{% extends '@layout/adminlte.html.twig' %}

{% block title %}
    Listagem de Campanha {{ parent() }}
{% endblock %}

{% block page_header %}
    Listagem de Campanha
{% endblock %}

{% block content %}

        <div class="box">

            <div class="box box-header">
                <a href="{{ url('campaign.create') }}" class="btn btn-app">
                    <i class="fa fa-plus-circle"></i> Criar
                </a>
            </div>

            <div class="box-body">

                <table class="table table-bordered">

                    <tbody>
                        <tr>
                            <th style="width: 10px;">ID</th>
                            <th>Nome</th>
                            <th>Assunto</th>
                            <th>Ações</th>
                        </tr>
                        {% for campaign in campaigns %}
                        <tr>
                            <td>{{ campaign.id }}</td>
                            <td>{{ campaign.name }}</td>
                            <td>{{ campaign.subject | slice(0,20) }}...</td>
                            <td>
                                <a href="{{ url('campaign.sender', {id: campaign.id}) }}">Enviar</a> |
                                <a href="{{ url('campaign.update', {id: campaign.id}) }}">Editar</a> |
                                <a href="{{ url('campaign.delete', {id: campaign.id}) }}">Excluir</a> |
                                <a href="{{ url('campaign.report', {id: campaign.id}) }}">Relatório</a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>

                </table>

            </div>

        </div>

{% endblock %}
