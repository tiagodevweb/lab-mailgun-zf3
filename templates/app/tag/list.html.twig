{% extends '@layout/adminlte.html.twig' %}

{% block title %}
    Listagem de Tags {{ parent() }}
{% endblock %}

{% block page_header %}
    Listagem de Tags
{% endblock %}

{% block content %}

        <div class="box">

            <div class="box box-header">
                <a href="{{ url('tag.create') }}" class="btn btn-app">
                    <i class="fa fa-plus-circle"></i> Criar
                </a>
            </div>

            <div class="box-body">

                <table class="table table-bordered">

                    <tbody>
                        <tr>
                            <th style="width: 10px;">ID</th>
                            <th>Nome</th>
                            <th>Ações</th>
                        </tr>
                        {% for tag in tags %}
                        <tr>
                            <td>{{ tag.id }}</td>
                            <td>{{ tag.name }}</td>
                            <td>
                                <a href="{{ url('tag.update', {id: tag.id}) }}">Editar</a>
                                <a href="{{ url('tag.delete', {id: tag.id}) }}">Excluir</a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>

                </table>

            </div>

        </div>

{% endblock %}
