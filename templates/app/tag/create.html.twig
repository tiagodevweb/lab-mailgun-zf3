{% extends '@layout/adminlte.html.twig' %}

{% block title %}
    Criar Tag {{ parent() }}
{% endblock %}

{% block page_header %}
    Criar Tag
{% endblock %}

{% block content %}

    {% include '@app/tag/_form-elements.html.twig' %}

    {% set submit = form.get('submit') %}
    {% do submit.setAttribute('class','btn btn-primary').setLabel('Salvar') %}

    {% do form.setAttribute('action',url('tag.create')) %}
    {% do form.prepare() %}
        <div class="box">

                {{ form().openTag(form) | raw}}

                    <div class="box-body">
                        {% include '@app/tag/_form-body.html.twig' %}
                    </div>

                    <div class="box-footer">
                        {{ formRow(submit) }}
                    </div>

                {{ form().closeTag() | raw}}

        </div>

{% endblock %}
